<h1>Settings</h1>
<div id='calendar'></div>
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">AVAILABLE APPOINTMENT</h4>
      </div>
      <div class="modal-body">
      <% (0..20).each do |time| %>
	<%= (Time.now + time.hour ).strftime('%I:%M %P')%><%= "-"%>
	<%= (Time.now + time.hour + 1.hour ).strftime('%I:%M %P')%>
	<input type="text" placeholder=" 3 Timeslot Available"></input>
	<button> Booked Available </button>
	<br>
<% end %>

   <div id="date" class="date_div"></div>

<script type="text/javascript">

$(document).ready(function() {

    // page is now ready, initialize the calendar...

    $('#calendar').fullCalendar({
       dayClick: function(date) {
          //string date=[date.format()];
        $('#date').html(date.format());
        //$('#appoint_fromtime','appoint_totime').html
        var x =  date.format();
         $('#select_day').val(x); 
       // console.log(x);
       
        //$('#default').html(date.format());
        
        $('#myModal').modal();
    },
       events: '/appointment'
        // put your options and callbacks here
    })

});
</script>
<div id='calendar'></div>


